{
  "name": "@antv/g2",
  "version": "3.0.0",
  "description": "the Grammar of Graphics in Javascript",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@gitlab.alibaba-inc.com:datavis/g2.git"
  },
  "keywords": [
    "g2",
    "chart"
  ],
  "author": "https://github.com/orgs/antvis/people",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015-loose-rollup": "^7.0.0",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.0.1",
    "electron": "^1.7.2",
    "electron-mocha": "^3.4.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-config-egg": "^3.2.0",
    "pre-commit": "^1.2.2",
    "rollup": "^0.42.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "uglify-js": "^3.0.15"
  },
  "scripts": {
    "lint": "eslint ./src",
    "lint-fix": "eslint ./src --fix",
    "build": "rollup -c -- index.js",
    "pretest": "rm -rf build && mkdir build && npm run build",
    "test": "electron-mocha ./test",
    "test-live": "npm run pretest && electron-mocha --interactive ./test",
    "dist": "rm -rf dist && mkdir dist && uglifyjs --compress --mangle --output dist/g2.min.js -- build/g2.js",
    "ci": "npm run test"
  },
  "pre-commit": {
    "run": [
      "lint",
      "test"
    ],
    "silent": false
  },
  "dependencies": {
    "lodash": "^4.17.4"
  }
}
